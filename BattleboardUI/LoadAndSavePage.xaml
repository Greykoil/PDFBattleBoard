<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BattleboardUI.LoadAndSavePage"
             Title="LoadAndSavePage">
    <Grid ColumnDefinitions="*,*">
        <Button Text="Load Character" Command="{Binding LoadCharacter}" Grid.Column="0"/>
        <Button Text="Save Character" Command="{Binding SaveCharacter}" Grid.Column="1"/>
    </Grid>
</ContentPage>